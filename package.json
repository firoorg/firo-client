{
  "name": "zcoin-client",
  "version": "0.0.4-1",
  "author": {
    "name": "Zcoin Foundation",
    "email": "team@zcoin.io",
    "url": "https://zcoin.io/"
  },
  "description": "Official Zcoin Client",
  "license": "MIT",
  "main": "./dist/electron/main.js",
  "scripts": {
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "build": "npm install && node electron-vue/build.js && electron-builder build -mlw",
    "build:dir": "node electron-vue/build.js && electron-builder --dir",
    "build:clean": "cross-env BUILD_TARGET=clean node electron-vue/build.js",
    "build:web": "cross-env BUILD_TARGET=web node electron-vue/build.js",
    "dev": "clear; DEBUG=zcoin:* node $NODE_DEBUG_OPTION electron-vue/dev-runner.js",
    "translate": "clear; SHOW_TRANSLATIONS=1 DEBUG=zcoin:* node electron-vue/dev-runner.js",
    "e2e": "npm run pack && mocha test/e2e",
    "lint": "eslint --ext .js,.vue src test",
    "pack": "npm run pack:main && npm run pack:renderer",
    "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config electron-vue/webpack.main.config.js",
    "pack:renderer": "cross-env NODE_ENV=production webpack --progress --colors --config electron-vue/webpack.renderer.config.js",
    "test": "npm run unit && npm run e2e",
    "unit": "karma start test/unit/karma.conf.js",
    "utils:rebuild-zeromq": "VERSION=$(echo $npm_package_devDependencies_electron | sed 's/\\^//g'); npm rebuild zeromq --runtime=electron --target=${VERSION}",
    "postinstall": "npm run utils:rebuild-zeromq",
    "electron-toolkit": "electron ./node_modules/electron-toolkit"
  },
  "build": {
    "productName": "Zcoin Client",
    "appId": "com.zcoin.client",
    "asar": true,
    "directories": {
      "output": "build",
      "buildResources": "assets"
    },
    "files": [
      "dist/electron/**/*",
      "assets/core/**/*"
    ],
    "asarUnpack": [
      "**/assets/core/**/*"
    ],
    "dmg": {
      "background": "assets/images/background.png",
      "iconSize": 120,
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "identity": null,
      "icon": "assets/icons/icon.icns",
      "files": [
        "!assets/core/linux",
        "!assets/core/win32"
      ]
    },
    "win": {
      "icon": "assets/icons/icon.ico",
      "files": [
        "!assets/core/linux",
        "!assets/core/darwin"
      ]
    },
    "linux": {
      "icon": "assets/icons",
      "files": [
        "!assets/core/darwin",
        "!assets/core/win32"
      ]
    }
  },
  "dependencies": {
    "@types/webpack-env": "^1.14.0",
    "@types/zeromq": "^4.6.2",
    "ajv": "^6.10.0",
    "async": "^2.6.2",
    "await-mutex": "^1.0.2",
    "axios": "^0.18.1",
    "big.js": "^5.2.2",
    "bs58": "^4.0.1",
    "cross-spawn": "^6.0.5",
    "date-fns": "^1.30.1",
    "debug": "^4.1.1",
    "electron-settings": "^3.2.0",
    "heatmap.js": "^2.0.5",
    "js-yaml": "^3.13.1",
    "lato-font": "^3.0.0",
    "lodash": "^4.17.15",
    "lodash.merge": "^4.6.2",
    "normalize-scss": "^7.0.1",
    "perfect-scrollbar": "^1.4.0",
    "sha.js": "^2.4.11",
    "supercluster": "^6.0.1",
    "typeface-overpass-mono": "0.0.71",
    "typesettings": "^4.0.0",
    "url-parse": "^1.4.4",
    "v-tooltip": "^2.0.0-rc.33",
    "vee-validate": "^2.1.7",
    "vue": "^2.6.8",
    "vue-electron": "^1.0.6",
    "vue-i18n": "^8.8.2",
    "vue-lottie": "^0.2.1",
    "vue-qrcode-component": "^2.1.1",
    "vue-radial-progress": "^0.2.10",
    "vue-router": "^3.0.2",
    "vue-select": "^2.5.1",
    "vue-slider-component": "^2.8.10",
    "vue-smooth-reflow": "^0.1.12",
    "vue-timeago": "^5.0.0",
    "vuetable-2": "^2.0.0-beta.4",
    "vuex": "^3.1.0",
    "vuex-router-sync": "^5.0.0",
    "winston": "^3.2.1",
    "zeromq": "^5.1.0",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
