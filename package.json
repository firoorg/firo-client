{
  "name": "firo-client",
  "version": "3.0.0",
  "author": {
    "name": "Firo Foundation",
    "email": "team@firo.io",
    "url": "https://firo.io/"
  },
  "description": "Firo Client",
  "license": "MIT",
  "main": "./dist/electron/main.js",
  "scripts": {
    "build": "node electron-vue/build.js && electron-builder build -wlm",
    "dev": "node electron-vue/dev-runner.js",
    "test": "mocha --bail -r ts-node/register 'tests/**/*.ts'",
    "rebuild-zeromq": "npm rebuild zeromq --runtime=electron --target=11.1.1"
  },
  "build": {
    "productName": "Firo Client",
    "appId": "com.firo.client",
    "artifactName": "Firo-Client-${version}.${ext}",
    "asar": true,
    "protocols": {
      "name": "firo",
      "schemes": [
        "firo"
      ]
    },
    "directories": {
      "output": "build",
      "buildResources": "assets"
    },
    "files": [
      "dist/electron/**/*",
      "assets/core/**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "dist/electron/**/*",
      "assets/core/**/*",
      "node_modules/**/*"
    ],
    "dmg": {
      "background": "assets/images/background.png",
      "iconSize": 120,
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "identity": null,
      "icon": "assets/icons/icon.icns",
      "files": [
        "!assets/core/linux",
        "!assets/core/win32"
      ]
    },
    "win": {
      "icon": "assets/icons/icon.png",
      "files": [
        "!assets/core/linux",
        "!assets/core/darwin"
      ]
    },
    "linux": {
      "category": "Network",
      "icon": "assets/icons",
      "files": [
        "!assets/core/darwin",
        "!assets/core/win32"
      ]
    }
  },
  "dependencies": {
    "@swyftx/api-crypto-address-validator": "^1.13.1",
    "@types/chai": "^4.2.12",
    "@types/lodash": "^4.14.168",
    "@types/webpack-env": "^1.15.3",
    "@types/zeromq": "^4.6.3",
    "async": "^2.6.3",
    "await-mutex": "^1.0.2",
    "axios": "^0.21.1",
    "bip39": "^3.0.2",
    "bs58": "^4.0.1",
    "date-fns": "^1.30.1",
    "easyqrcodejs": "^3.8.3",
    "lodash": "^4.17.20",
    "node-gyp": "^9.0.0",
    "normalize-scss": "^7.0.1",
    "resolve-url-loader": "^3.1.5",
    "sha.js": "^2.4.11",
    "simple-plist": "^1.1.0",
    "typeface-overpass-mono": "0.0.71",
    "v-tooltip": "^2.0.3",
    "vee-validate": "^2.2.15",
    "vue": "^2.6.12",
    "vue-async-computed": "^3.9.0",
    "vue-clipboards": "^1.3.0",
    "vue-electron": "^1.0.6",
    "vue-lottie": "^0.2.1",
    "vue-radial-progress": "^0.2.10",
    "vue-router": "^3.4.5",
    "vue-select": "^2.6.4",
    "vue-timeago": "^5.1.2",
    "vuetable-2": "^2.0.0-beta.4",
    "vuex": "^3.5.1",
    "vuex-router-sync": "^5.0.0",
    "winreg": "^1.2.4",
    "winston": "^3.3.3",
    "zeromq": "^6.0.0-beta.6"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/plugin-proposal-do-expressions": "^7.10.4",
    "@babel/plugin-proposal-export-default-from": "^7.10.4",
    "@babel/plugin-proposal-export-namespace-from": "^7.10.4",
    "@babel/plugin-proposal-function-bind": "^7.11.5",
    "@babel/plugin-proposal-function-sent": "^7.10.4",
    "@babel/plugin-proposal-json-strings": "^7.10.4",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.11.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.4",
    "@babel/plugin-proposal-numeric-separator": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/plugin-proposal-pipeline-operator": "^7.10.5",
    "@babel/plugin-proposal-throw-expressions": "^7.10.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-syntax-import-meta": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/register": "^7.11.5",
    "@babel/runtime": "^7.11.2",
    "@types/mocha": "^8.0.3",
    "babel-loader": "^8.1.0",
    "babel-minify-webpack-plugin": "^0.3.1",
    "babel-plugin-istanbul": "^5.2.0",
    "babili-webpack-plugin": "^0.1.2",
    "cfonts": "^2.8.6",
    "chai": "^4.2.0",
    "copy-webpack-plugin": "^6.1.1",
    "css-loader": "^2.1.1",
    "devtron": "^1.4.0",
    "electron": "11.1.1",
    "electron-builder": "^22.8.1",
    "electron-toolkit": "^1.0.1",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "inject-loader": "^4.0.1",
    "json-loader": "^0.5.7",
    "mini-css-extract-plugin": "0.5.0",
    "mocha": "^6.2.3",
    "node-loader": "^0.6.0",
    "node-sass": "^4.14.1",
    "sass-loader": "^7.3.1",
    "spectron": "^13.0.0",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "url-loader": "^1.1.2",
    "vue-loader": "^15.9.3",
    "vue-style-loader": "^4.1.2",
    "vue-svg-loader": "^0.16.0",
    "vue-template-compiler": "^2.6.12",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^4.2.2",
    "yaml-loader": "^0.5.0"
  }
}
