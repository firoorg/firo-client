{
  "name": "firo-client",
  "version": "4.0.0",
  "author": {
    "name": "Firo Foundation",
    "email": "team@firo.io",
    "url": "https://firo.io/"
  },
  "description": "Firo Client",
  "license": "MIT",
  "main": "./dist/electron/main.js",
  "scripts": {
    "build": "nvm use 20 && npm install && node electron-vue/build.js && DEBUG=1 $(npx which electron-builder) build",
    "dev": "node electron-vue/dev-runner.js",
    "test": "mocha --bail -r ts-node/register 'tests/**/*.ts'",
    "rebuild-zeromq": "npm rebuild zeromq --runtime=electron --target=22.0.0"
  },
  "build": {
    "productName": "Firo Client",
    "appId": "com.firo.client",
    "artifactName": "Firo-Client-${version}.${ext}",
    "asar": true,
    "protocols": {
      "name": "firo",
      "schemes": [
        "firo"
      ]
    },
    "directories": {
      "output": "build",
      "buildResources": "assets"
    },
    "files": [
      "dist/electron/**/*",
      "assets/core/**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "dist/electron/**/*",
      "assets/core/**/*",
      "node_modules/**/*"
    ],
    "dmg": {
      "background": "assets/images/background.png",
      "iconSize": 120,
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "identity": null,
      "icon": "assets/icons/icon.icns",
      "files": [
        "!assets/core/linux",
        "!assets/core/win32"
      ]
    },
    "win": {
      "icon": "assets/icons/icon.png",
      "files": [
        "!assets/core/linux",
        "!assets/core/darwin"
      ]
    },
    "linux": {
      "category": "Network",
      "target": [
        "AppImage",
        "snap",
        "tar.xz"
      ],
      "icon": "assets/icons",
      "files": [
        "!assets/core/darwin",
        "!assets/core/win32"
      ]
    }
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@swyftx/api-crypto-address-validator": "^1.13.1",
    "@types/chai": "^4.3.11",
    "@types/lodash": "^4.14.202",
    "@types/webpack-env": "^1.18.4",
    "@types/zeromq": "^5.2.5",
    "@vue/compiler-sfc": "^3.4.15",
    "async": "^3.2.5",
    "await-mutex": "^1.0.2",
    "axios": "^1.6.6",
    "bech32-buffer": "github:sproxet/bech32-buffer",
    "bip39": "^3.1.0",
    "bs58": "^5.0.0",
    "date-fns": "^3.3.1",
    "easyqrcodejs": "^4.6.0",
    "html-entities": "^2.4.0",
    "imports-loader": "^5.0.0",
    "lodash": "^4.17.21",
    "node-gyp": "^10.0.1",
    "normalize-scss": "^8.0.0",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.70.0",
    "sass-embedded": "^1.70.0",
    "sha.js": "^2.4.11",
    "simple-plist": "^1.3.1",
    "time-ago": "^0.2.1",
    "typeface-overpass-mono": "^1.1.13",
    "vee-validate": "^4.12.4",
    "vue": "^3.4.15",
    "vue-clipboards": "^1.3.0",
    "vue-router": "^4.2.5",
    "vue-select": "^4.0.0-beta.6",
    "vue3-vuetable": "^3.0.4",
    "vuex": "^4.1.0",
    "winreg": "^1.2.5",
    "winston": "^3.11.0",
    "zeromq": "^6.0.0-beta.19"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "cfonts": "^3.2.0",
    "chai": "^5.0.3",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.9.1",
    "devtron": "^1.4.0",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "electron-toolkit": "^1.0.24",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.0",
    "json-loader": "^0.5.7",
    "mini-css-extract-plugin": "^2.7.7",
    "mocha": "^10.2.0",
    "node-loader": "^2.0.0",
    "playwright": "^1.41.1",
    "sass-loader": "^14.0.0",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.3.3",
    "url-loader": "^4.1.1",
    "val-loader": "^6.0.0",
    "vue-loader": "^17.4.2",
    "vue-style-loader": "^4.1.3",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-hot-middleware": "^2.26.0"
  }
}
