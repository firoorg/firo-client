    "vue-devtools": "^5.0.0-beta.1",
    "vue-loader": "^15.7.0",
    "vue-style-loader": "^4.1.2",
    "vue-svg-loader": "^0.12.0",
    "vue-template-compiler": "^2.6.8",
    "webpack": "^4.30.0",
